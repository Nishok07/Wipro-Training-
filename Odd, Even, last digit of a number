// Even numbers //
class evenNumbers{
      public static void main(String[]args){
              int num;
              if( num % 2 == 0 ){
                   System.out.println("Number is even");
              }
      }
   }
   
// Odd numbers //
class oddNumbers{
      public static void main(String[]args){
              int num;
              if( num % 2 != 0 ){
                   System.out.println("Number is odd");
              }
      }
   }
   
// Last digit in a number //
class lastDigit{
      public static void main(String[]args){
              int num;
              return num % 10;
     }
}

// Sum of last digits of two numbers //
public class sumLastDigits {
	static int sumDigits(int ip1, int ip2) {
		int num1 = ip1 % 10;
		int num2 = ip2 % 10;
		int result = num1 + num2;
		return result;
	}
	public static void main(String[] args) {
		sumDigits(117,24);
	}
}
